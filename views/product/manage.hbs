{{#if isCart}}
    {{#section 'title'}}
        Quản lý đơn hàng
    {{/section}}

    {{#section 'breadcrumbRe'}}
        <li><a href="/home">Dashboard</a>
        <li><a href="javascript:;">Quản lý đơn hàng</a>
    {{/section}}
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">Quản lý đơn hàng</h3>
                    </div>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th class="col-md-1">Mã ĐH</th>
                        <th class="col-md-1">Tên KH</th>
                        <th class="col-md-3">Tên xe</th>
                        <th class="col-md-1">Số lượng</th>
                        <th class="col-md-3">Tình trạng</th>
                        <th class="col-md-1">Tổng tiền</th>
                        <th class="col-md-2">Ngày tạo</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each carts}}
                    <tr>
                        <td>{{cart.CartID}}</td>
                        <td>{{cart.username}}</td>
                        <td>{{cart.Name}}</td>
                        <td>{{cart.ProQuantity}}</td>
                        <td>
                            <div class="row">
                                <select style="font-weight: bold; color:green " class="col-md-6 input-select">
                                    <option style="font-weight: bold; color: green" value="0">Đã giao</option>
                                    <option style="font-weight: bold; color: blueviolet" value="1">Đang giao</option>
                                    <option style="font-weight: bold; color: red" value="1">Chưa giao</option>
                                </select>
                                <div class="col-md-6">
                                    <a href="javascript:;" class="btn btn-success"><span class="fa fa-refresh"></span></a>
                                </div>
                            </div>
                        </td>
                        <td>{{amount}}</td>
                        <td>{{checkoutDay}}</td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
{{/if}}