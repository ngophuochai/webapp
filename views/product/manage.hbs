{{#if isProduct}}
    {{#section 'title'}}
        Quản lý sản phẩm
    {{/section}}

    {{#section 'breadcrumbRe'}}
        <li><a href="/home">Dashboard</a>
        <li><a href="javascript:;">Quản lý sản phẩm</a>
    {{/section}}
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">Quản lý sản phẩm</h3>
                    </div>
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-8">
                    <div class="header-search">
                        <form action="javascript:;" method="GET">   
                            <input class="input" placeholder="Nhập từ khóa">
                            <input type="submit" class="search-btn" value="Tìm kiếm" >
                        </form>
                    </div>
                </div>
                <a href="javascript:;" class="btn btn-success">Thêm sản phẩm</a>
                <br><br>
                <table class="table">
                    <thead>
                    <tr>
                        <th class="col-md-2">Mã sản phẩm</th>
                        <th class="col-md-1">Hình ảnh</th>
                        <th class="col-md-3">Tên sản phẩm</th>
                        <th class="col-md-2">Số lượng tồn</th>
                        <th class="col-md-2">Đơn giá</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{ID}}</td>
                        <td>
                            <div class="product-img">
                                <img style="width: 50px;" src="/imgs/{{ID}}/main.jpg" alt="">
                            </div>
                        </td>
                        <td>{{Name}}</td>
                        <td>{{Quantity}}</td>
                        <td>{{Price}}</td>
                        <td> 
                            <a href="javascript:;" class="btn btn-primary">Sửa</a>
                            <a href="javascript:;" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
{{/if}}
{{#if isCategory}}
    {{#section 'title'}}
        Quản lý kiểu xe
    {{/section}}

    {{#section 'breadcrumbRe'}}
        <li><a href="/home">Dashboard</a>
        <li><a href="javascript:;">Quản lý kiểu xe</a>
    {{/section}}
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">Quản lý loại sản phẩm</h3>
                    </div>
                </div>

                <div class="col-md-6 header-search">
                    <form action="/admin/manageProduct" method="GET">
                        <input class="input" placeholder="Nhập tên loại">
                        <a href="javascript:;" class="btn btn-success">Thêm loại sản phẩm</a>
                    </form>
                </div>
                <br><br>
                <table class="table">
                    <thead>
                    <tr>
                        <th class="col-md-3">Loại sản phẩm</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each categories}}
                    <tr>
                        <td><input class="input" type="text" value="{{Name}}"></td>
                        <td><a href="javascript:;" class="btn btn-danger">Xóa</a></td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
                <a href="javascript:;" class="btn btn-success">Cập nhật</a>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
{{/if}}
